<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".put_and_delet">

    <EditText
        android:id="@+id/putdelNumber"
        android:layout_width="351dp"
        android:layout_height="71dp"
        android:hint="Введите имя"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/putdelName" />

    <EditText
        android:id="@+id/putdelName"
        android:layout_width="351dp"
        android:layout_height="71dp"
        android:layout_marginTop="16dp"
        android:hint="Введите имя"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPut"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:text="Put person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/putdelNumber" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="160dp"
        android:layout_height="54dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:text="Delet person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/putdelNumber" />

    <TextView
        android:id="@+id/testtest"
        android:layout_width="126dp"
        android:layout_height="46dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPut" />

</androidx.constraintlayout.widget.ConstraintLayout>